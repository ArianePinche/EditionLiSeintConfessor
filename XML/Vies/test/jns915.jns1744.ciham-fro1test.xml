            <person xml:id="agapites">
                  <persName>Agapites</persName>
                  <note type="biographical">Sous-diacre de <persName ref="#benoit">Saint
                        Benoit</persName>.</note>
               </person>
            <person xml:id="apolloine">
                  <persName>Apollin</persName>
                  <note type="biographical">Évêque d'<placeName ref="Excorande">Excorande</placeName>.</note>
               </person>
            <person xml:id="appollin">
                  <persName>Appollin</persName>
                  <note type="biographical">Dieu du panthéon romain.</note>
               </person>
            <person xml:id="benoit">
                  <persName>Beneoit</persName>
                  <birth when="0480">480</birth>
                  <death when="0547">547</death>
                  <note type="biographical"
                     source="http://catalogue.bnf.fr/ark:/12148/cb118911827">Saint Benoit, patriarche et législateur des moines d'Occident, fondateur de
                     l'ordre des bénédictins. Abbé du <placeName ref="#cassin">Mont-Cassin</placeName>, il est célèbre pour sa règle de vie monastique,
                     dite « la règle de saint Benoit ».</note>
               </person>
            <person xml:id="blidin">
                  <persName>Blidin</persName>
                  <note type="biographical">Compagnon du roi <persName ref="#thotila">Totila</persName>.</note>
               </person>
            <person xml:id="costance">
                  <persName>Costances</persName>
                  <note type="biographical">Évêque d'<placeName ref="#aquin">Aquino</placeName>.</note>
               </person>
            <person xml:id="constentin2">
                  <persName>Costentin</persName>
                  <note type="biographical">Successeur de <persName ref="#benoit">saint
                        Benoit</persName> à la tête du monastère de <placeName ref="#cassin">Mont-Cassin</placeName>.</note>
               </person>
            <person xml:id="deudone2">
                  <persName>Deudonez</persName>
                  <note type="biographical">Abbé du moine <persName ref="#romein">Romain</persName>.</note>
               </person>
            <person xml:id="evitius">
                  <persName>Evitius</persName>
                  <note type="biographical">Noble, père de <persName ref="#maurum">Maurum</persName>.</note>
               </person>
            <person xml:id="florentin">
                  <persName>Florences</persName>
                  <note type="biographical">Prêtre qui poussé par la jalousie envoie un pain
                     empoisonné à <persName ref="#benoit">saint Benoit</persName>.</note>
               </person>
            <person xml:id="germein"
                    corresp="http://catalogue.bnf.fr/ark:/12148/cb14471542d">
                  <persName>Germein</persName>
                  <death when="0541">541</death>
                  <note type="biographical">Saint Germain de Capoue, évêque de Capoue en Italie, ami
                     de <persName ref="#benoit">Saint Benoît</persName>.</note>
               </person>
            <person xml:id="gotus">
                  <persName>Gotus</persName>
                  <note type="biographical"> Moine de la confrérie de <persName ref="#benoit">saint
                        Benoit</persName>, pauvre d'esprit.</note>
               </person>
            <person xml:id="gregoire">
                  <persName>Gregoires</persName>
                  <birth when="0540">540</birth>
                  <death when="0604">604</death>
                  <note type="biographical"
                     source="http://catalogue.bnf.fr/ark:/12148/cb11886472r">Grégoire le grand, pape de Rome de 590 à 604, auteur des <hi rend="italic">Dialogues</hi> dont est issue la <hi rend="italic">Vie de <persName ref="#benoit">saint Benoit</persName>
                  </hi>.</note>
               </person>
            <person xml:id="honores">
                  <persName>Honores</persName>
                  <note type="biographical">Abbé du monastère où saint Benoit rentra dans les ordres.</note>
               </person>
            <person xml:id="jehan">
                  <persName>Jehan</persName>
                  <birth when="0360">360</birth>
                  <death when="0432">432</death>
                  <note type="biographical" source="http://data.bnf.fr/12044269/jean_cassien/">
                     <surname type="complex">Jean Cassien ou Jean l'ermite</surname> prêtre et
                     moine, originaire d'<placeName ref="#egypte">Égypte</placeName>, il établit sa
                     communauté sur l'île de Chypre.</note>
               </person>
            <person xml:id="jeanBaptiste">
                  <persName>Jehan Baptiste</persName>
                  <note type="biographical"
                     source="http://catalogue.bnf.fr/ark:/12148/cb119576305/PUBLIC">
                  <surname type="complex">Jean le Baptiste</surname>, personnage biblique, prédicateur
                     en Judée.</note>
               </person>
            <person corresp="http://catalogue.bnf.fr/ark:/12148/cb119392246/PUBLIC"
                    xml:id="jesus">
                  <persName>Jesu Crist</persName>
                  <birth when="0001">0</birth>
                  <death when="0030">33</death>
                  <note type="biographical"
                     source="http://catalogue.bnf.fr/ark:/12148/cb11932173f">
                     <surname type="complex">Jésus-Christ</surname>, messie. Les chrétiens le
                     reconnaissent comme le fils unique de Dieu.</note>
               </person>
            <person corresp="http://catalogue.bnf.fr/ark:/12148/cb119423647/PUBLIC"
                    xml:id="martin">
                  <persName>Martin</persName>
                  <birth when="0316">316</birth>
                  <death when="0397-11-08">397</death>
                  <note type="biographical"
                     source="http://catalogue.bnf.fr/ark:/12148/cb119423647">
                     <surname type="complex">Saint Martin de Tours</surname>, né en Hongrie dans
                     la colonie romaine de <placeName ref="#sabarie">Sabaria</placeName> en 316 et
                     mort à <placeName ref="#conde">Candes</placeName> en France le 8 novembre
                     397.</note>
               </person>
            <person xml:id="maurum">
                  <persName>Maurum</persName>
