   <text>
      <body>
         <div n="glossary">
            <!-- type d'entrée pour un verbe -->
            <entry xml:id="acraventer"> <!-- w/@lemma -->
               <form type="lemma">acraventer</form><!-- Mettre la forme de l'infinitif si présente dans le texte, à la main dans la cas contraire -->
               <form type="TL">acraventer</form>  <!-- w/@lemma -->
               <gramGrp>
                  <gram type="pos">v.</gram> <!-- v. = w/@pos qui commence par VER -->
                  <gram type="constr.">tr.</gram><!-- à remplir à la main-->
               </gramGrp>
               <sense>
                  <cit type="translationEquivalent" xml:lang="fr">
                     <form>
                        <orth>écraser, briser</orth><!-- à remplir à la main-->
                     </form>
                  </cit>
                  <cit type="example">
                     <quote>acraventer</quote><!-- classer par forme graphique -->
                     <gramGrp>
                        <gram type="mode">inf</gram> <!--= w/@pos après VER -->
                        <!-- si inf ou ppe ou ppa pas d'autres catégorie -->
                     </gramGrp>
                     <bibl>
                        <biblScope unit="text">Benoît</biblScope> <!-- //titleStmt/title (mot après saint) -->
                        <biblScope unit="page">p. 267</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 23</biblScope> <!-- à remplir à la main-->
                     </bibl>
                     <!-- rajouter un bibl. pour chaque occurrence différente -->
                     <bibl> 
                        <biblScope unit="text"/>
                        <biblScope unit="page">p. </biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. </biblScope> <!-- à remplir à la main-->
                     </bibl>
                  </cit>
                  <cit type="example">
                     <quote>acraventa</quote><!-- classer par forme graphique -->
                     <gramGrp>
                        <gram type="mode">ind.</gram> <!-- = w/@msd[1] (tokeniser avec |, récupérer chaîne après =)-->
                        <gram type="tense">impft</gram> <!-- = w/@msd[2] -->
                        <gram type="pers.">3</gram> <!-- = w/@msd[3] -->
                        <gram type="pers.NB">sing</gram> <!-- = w/@msd[4] -->
                     </gramGrp>
                     <bibl>
                        <biblScope unit="text">Martin</biblScope> <!-- //titleStmt/title (mot après saint) -->
                        <biblScope unit="page">p. 24</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 13</biblScope> <!-- à remplir à la main-->
                     </bibl>
                     <!-- rajouter un bibl. pour chaque occurrence différente -->
                     <bibl> 
                        <biblScope unit="text"/>
                        <biblScope unit="page">p. </biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. </biblScope> <!-- à remplir à la main-->
                     </bibl>
                  </cit>
               </sense>
               <cit type="example">
                  <quote>acraventez</quote><!-- classer par forme graphique -->
                  <gramGrp>
                     <gram type="mode">part. passé</gram> <!-- = w/@pos après VER - ppe : part. passé, ppa : participe présent -->
                  </gramGrp>
                  <bibl>
                     <biblScope unit="text">Martin</biblScope> <!-- //titleStmt/title (mot après saint) -->
                     <biblScope unit="page">p. 23</biblScope> <!-- à remplir à la main-->
                     <biblScope unit="l.">l. 16</biblScope> <!-- à remplir à la main-->
                  </bibl>
                  <!-- rajouter un bibl. pour chaque occurrence différente -->
                  <bibl> 
                     <biblScope unit="text"/>
                     <biblScope unit="page">p. </biblScope> <!-- à remplir à la main-->
                     <biblScope unit="l.">l. </biblScope> <!-- à remplir à la main-->
                  </bibl>
               </cit>
               <!-- multipliable si nécessaire 
               <sense>
                  <cit type="translationEquivalent" xml:lang="fr">
                     <form>
                        <orth></orth>
                     </form>
                  </cit>
                  <cit type="example">
                     <gramGrp>
                        <gram type="tense">Présent</gram>
                     </gramGrp>
                     <quote>Machin</quote>
                     <bibl>
                        <biblScope unit="text"></biblScope>
                        <biblScope unit="chapter"></biblScope>
                     </bibl>
                  </cit>
               </sense>
               -->
            </entry>
            <!-- type d'entrée pour un nom -->
