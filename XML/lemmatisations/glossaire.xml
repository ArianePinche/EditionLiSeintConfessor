                     <bibl>
                        <biblScope unit="text">Martin</biblScope> <!-- //titleStmt/title (mot après saint) -->
                        <biblScope unit="page">p. 6</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 12</biblScope> <!-- à remplir à la main-->
                     </bibl>
                     <bibl>
                        <biblScope unit="text">Martin</biblScope> <!-- //titleStmt/title (mot après saint) -->
                        <biblScope unit="page">p. 7</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 2</biblScope> <!-- à remplir à la main-->
                     </bibl>
                     <bibl>
                        <biblScope unit="text">Gilles</biblScope> <!-- //titleStmt/title (mot après saint) -->
                        <biblScope unit="page">p. 122</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 28</biblScope> <!-- à remplir à la main-->
                     </bibl>
                  </cit>
               </sense>
            </entry>
            <!-- type d'entrée pour un adverbe -->
            <entry xml:id="tempre2">
               <form type="lemma">tempre</form><!-- Mettre la forme de l'infinitif si présente dans le texte, à la main dans la cas contraire -->
               <form type="TL">tempre2</form>
               <gramGrp>
                  <gram type="pos">adv.</gram> <!-- v. = w/@pos-->
               </gramGrp>
               <sense> <!-- si besoin de plus d'un à modifier à la main -->
                  <cit type="translationEquivalent" xml:lang="fr">
                     <form>
                        <orth>tôt</orth><!-- à remplir à la main-->
                     </form>
                  </cit>
                  <cit type="example">
                     <quote>tempre</quote><!-- classer par forme graphique -->
                     <bibl>
                        <biblScope unit="text">Gille</biblScope> <!-- //titleStmt/title (mot après saint) -->
                        <biblScope unit="page">p. 128</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 11</biblScope> <!-- à remplir à la main-->
                     </bibl>
                  </cit>
               </sense>
               <sense> <!-- si besoin de plus d'un à modifier à la main -->
                  <cit type="translationEquivalent" xml:lang="fr">
                     <form>
                        <orth>bientôt</orth><!-- à remplir à la main-->
