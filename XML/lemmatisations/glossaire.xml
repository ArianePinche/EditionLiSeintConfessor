                        <biblScope unit="page">p. 65</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 17</biblScope> <!-- à remplir à la main-->
                     </bibl>
                     <bibl>
                        <biblScope unit="text">Marcel</biblScope> <!-- //titleStmt/title (mot après saint) -->
                        <biblScope unit="page">p. 143</biblScope> <!-- à remplir à la main-->
                        <biblScope unit="l.">l. 23</biblScope> <!-- à remplir à la main-->
                     </bibl>
                  </cit>
                  <cit type="example">
                     <quote>affubleüre</quote><!-- classer par forme graphique -->
                     <bibl>
                        <biblScope unit="text">Dialogues</biblScope> <!-- //titleStmt/title (mot après saint) -->
